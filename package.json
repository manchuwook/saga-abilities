{
  "name": "saga-abilities",
  "version": "1.0.0",
  "description": "An ability manager for SAGA TTRPG",
  "type": "module",
  "scripts": {
    "dev": "nx serve",
    "build": "nx vite:build --config vitest.config.ts",
    "build:analyze": "cross-env ANALYZE=true nx vite:build --config vitest.config.ts",
    "build:prod": "pnpm clean && nx vite:build --config vitest.config.ts",
    "build:profile": "cross-env PROFILE=true pnpm build:prod",
    "build:measure": "cross-env MEASURE=true pnpm build:prod",
    "preview": "nx vite:preview",
    "start": "nx serve",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "analyze": "cross-env ANALYZE=true nx vite:build --config vitest.config.ts && pnpm dlx serve -s dist",
    "lighthouse": "pnpm build:prod && pnpm dlx serve -s dist & npx lighthouse http://localhost:3000 --view",
    "compress:images": "pnpm dlx imagemin-cli \"public/**/*.{jpg,png,svg}\" --out-dir=public/optimized",
    "generate:pwa-icons": "bash ./scripts/generate-pwa-icons.sh",
    "test": "nx vite:test run",
    "test:watch": "nx vite:test",
    "test:coverage": "nx vite:test run --coverage",
    "test:coverage:detailed": "nx vite:test run --coverage --reporter=verbose",
    "test:coverage:html": "vitest run --coverage --reporter=html  --reporter=lcov --outdir=coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@mantine/core": "^8.0.1",
    "@mantine/dates": "^8.0.1",
    "@mantine/form": "^8.0.1",
    "@mantine/hooks": "^8.0.1",
    "@mantine/modals": "^8.0.1",
    "@mantine/notifications": "^8.0.1",
    "@tabler/icons-react": "^3.33.0",
    "@tanstack/react-query": "^5.76.1",
    "@tanstack/react-table": "^8.21.3",
    "@vitejs/plugin-react": "^4.4.1",
    "dayjs": "^1.11.13",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "localforage": "^1.10.0",
    "match-sorter": "^8.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.0",
    "sort-by": "^1.2.0",
    "vite": "^6.3.5",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@nx/vite": "21.1.1",
    "@nx/web": "21.1.1",
    "@rollup/plugin-dynamic-import-vars": "^2.1.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.18",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@vitest/coverage-v8": "3.1.3",
    "@vitest/ui": "^3.0.0",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.7",
    "happy-dom": "^17.4.7",
    "imagemin-cli": "^8.0.0",
    "jiti": "2.4.2",
    "lighthouse": "^12.6.0",
    "nx": "21.1.1",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^5.14.0",
    "terser": "^5.39.2",
    "typescript": "^5.8.3",
    "vite-plugin-bundle-analyzer": "^0.0.1",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-imagemin": "^0.6.1",
    "vite-plugin-preload": "^0.4.2",
    "vite-plugin-pwa": "^1.0.0",
    "vitest": "^3.1.3"
  }
}